

            <div class="grid_5">
                <div class="module">
                     <h2><span>用户管理</span></h2>
                        
                     <div class="module-body">
                        <%= form_for([:admin, @user]) do |f| %>
                        	<% if @user.errors.any? %>
    						    <div id="error_explanation">
    						      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this role from being saved:</h2>

    						      <ul>
    						      <% @user.errors.full_messages.each do |msg| %>
    						        <li><%= msg %></li>
    						      <% end %>
    						      </ul>
    						    </div>
    						    
    						  <% end %>
                        
                        	<p>
                                <label>用户名</label>
                                <%= f.text_field :username , :class => "input-medium validate[required,minSize[2],maxSize[30]" %>
                            </p>
                            <p>
                                <label>电子邮件</label>
                                <%= f.email_field :email , :class => "input-medium validate[required,maxSize[50],custom[email]]" %>
                            </p>

                            <p>
                                <label>密码</label>
                                <%= f.password_field :password, :class => "input-medium validate[required,minSize[6],maxSize[30]]" %>
                            </p>
                            <p>
                                <label>密码确认</label>
                                <%= f.password_field :password_confirmation, :class => "input-medium validate[required,minSize[6],maxSize[30],equals[user_password]]" %>
                            </p>
                            
                            <fieldset>
                                <input class="submit-green" type="submit" value="Submit" /> 
                                <input class="submit-gray" type="submit" value="Cancel" />
                            </fieldset>
                        <% end %>
                        
                     </div> <!-- End .module-body -->
                </div> <!-- End .module -->
                <div style="clear:both;"></div>
            </div> <!-- End .grid_6 -->
            <div style="clear:both;"></div>