<h1>核心用户</h1>
<script type="text/javascript">
  $(function() {
    $( "#datepicker" ).datepicker();
    $( "#datepicker" ).datepicker( "option", "dateFormat", "yy--mm--dd" );
    $( "#datepicker" ).val("<%= @time %>");
  });
</script>
<style type="text/css">
  table tr td{ border:#4C4C4C solid 0.5px; text--align:center; line--height:24px;}
</style>
<h3>昨日核心用户共：<%= @total.count %></h3>

<%= form_tag(search_result_clicks_path, :method => :get) do %>
  <p>
    日期: <input type="text" id="datepicker" name="start_date">
  </p>
    <%= submit_tag("查询") %>
  </p>
<% end %>

<table border='1'>
	<tr>
		<td>用户编号</td>
		<td>用户名称</td>
		<td>好友</td>
		<td>操作数</td>
		<td>日志数</td>
		<td>帖子数</td>
		<td>主题数</td>
		<td>分享数</td>
		<td>总在线时间</td>
		<td>昨天在线时间</td>
		<td>回复数</td>
		<td>日期</td>
	</tr>
	<% @customers.each do |c| %>
	<tr>
		<td><%= c.uid%></td>
		<td><%= c.username %></td>
		<td><%= c.friend %></td>
		<td><%= c.doing %></td>
		<td><%= c.blog %></td>
		<td><%= c.post %></td>
		<td><%= c.thread %></td>
		<td><%= c.share %></td>
		<td><%= c.online %></td>
		<td><%= c.yd_time %></td>
		<td><%= c.post_back %></td>
		<td><%= c.current_date %></td>
	</tr>
	<% end %>
</table>
<%=h will_paginate @customers, :previous_label => '上一页',  :next_label => '下一页'%>