								<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
							<% end %>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<% mv = ['MOV']&@arr %>
						<% if !mv.empty? %>
							<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
						<% else %>
							<td width="80px;"></td>
