						<% tp = ['TYP']&@arr %>
						<% if !tp.empty? %>
							<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<% bp = ['BNP']&@arr %>
						<% if !bp.empty? %>
							<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<% rc = ['REC']&@arr %>
						<% if !rc.empty? %>
							<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<% ur = ['URE']&@arr %>
						<% if !ur.empty? %>
							<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
					</tr>
				</table>
			</td>
		</tr>
		<% end %>
	</table>
</div>