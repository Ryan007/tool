								<td width="80px;"><%= @bbs_admins.sum("`count`")%></td>
							<%	end %>
						<% else %>
							<td width="80px;"></td>
						<% end %>

						<% del = ['DLP', 'PRN', 'UDL', 'DEL']&@arr %>
