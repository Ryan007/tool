							<% elsif cls.size == 6 %>
								<td width="80px;"><%= @bbs_admins.where("modaction in ('#{cls[0]}', '#{cls[1]}', '#{cls[2]}','#{cls[3]}', '#{cls[4]}','#{cls[5]}')").sum("`count`")%></td>
							<% elsif cls.size == 7 %>
