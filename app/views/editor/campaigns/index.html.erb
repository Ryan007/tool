<h1>活动列表</h1>
<%= link_to "返回", editor_main_index_path%><br />
<%= link_to '新建活动', new_editor_campaign_path %><br />
<div style="margin-top:15px;">
<%= form_tag(editor_campaigns_path, :method => :get) do %>
  <p>
    名称: <input type="text" name="camp_name" value="<%= @camp_name%>">
    <%= submit_tag("查询") %>
  </p>
<% end %>
</div>
<table>
  <tr>
    <th>ID</th>
    <th>名称</th>
    <th>描述</th>
    <th></th>
    <th></th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%= campaign.id%></td>
    <td><%= link_to campaign.name, [:editor, campaign] %></td>
    <td><%= campaign.description %></td>
    <td><%= link_to 'Edit', edit_editor_campaign_path(campaign) %></td>
  </tr>
<% end %>
</table>
<%=h will_paginate @campaigns, :previous_label => '上一页',  :next_label => '下一页'%>

